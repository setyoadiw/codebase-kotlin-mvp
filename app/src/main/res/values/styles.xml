<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="H1">
        <item name="android:textSize">@dimen/text_h1</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:fontFamily">@font/catamaran_light</item>
    </style>

    <style name="H2">
        <item name="android:textSize">@dimen/text_h2</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:fontFamily">@font/catamaran_light</item>
    </style>

    <style name="H3">
        <item name="android:textSize">@dimen/text_h3</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:fontFamily">@font/catamaran</item>
    </style>

    <style name="H4">
        <item name="android:textSize">@dimen/text_h4</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:fontFamily">@font/catamaran</item>
    </style>

    <style name="H5">
        <item name="android:textSize">@dimen/text_h5</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:fontFamily">@font/catamaran</item>
    </style>

    <style name="H6">
        <item name="android:textSize">@dimen/text_h6</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:fontFamily">@font/catamaran_medium</item>
    </style>

    <style name="subtitle1">
        <item name="android:textSize">@dimen/text_subtitle1</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:fontFamily">@font/catamaran</item>
    </style>

    <style name="subtitle2">
        <item name="android:textSize">@dimen/text_subtitle2</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:fontFamily">@font/catamaran_medium</item>
    </style>

    <style name="body1">
        <item name="android:textSize">@dimen/text_body1</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:fontFamily">@font/catamaran</item>
    </style>

    <style name="body2">
        <item name="android:textSize">@dimen/text_body2</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:fontFamily">@font/catamaran</item>
    </style>

    <style name="button">
        <item name="android:textSize">@dimen/text_button</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorDivider</item>
        <item name="android:fontFamily">@font/catamaran_medium</item>
    </style>

    <style name="caption">
        <item name="android:textSize">@dimen/text_caption</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:fontFamily">@font/catamaran</item>
    </style>

    <style name="overline">
        <item name="android:textSize">@dimen/text_overline</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:fontFamily">@font/catamaran</item>
    </style>

</resources>
